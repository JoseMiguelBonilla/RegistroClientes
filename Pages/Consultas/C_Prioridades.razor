@page "/ConsultasPrioridades"
@inject PrioridadesBLL PrioridadesBLL


<EditForm Model="lista">

    <div class="container">
        <div class="card shadow-lg">
            <div class="card-header">
                <h4>Consulta de Prioridades</h4>
            </div>

            <div class="card-body">
                <div class="input-group mb-3">
                    <InputText @bind-Value="Descripcion" class="form-control" aria-describedby="buscarButton" />
                    <button @onclick="Buscar" class="btn btn-outline-primary" type="button" id="buscarButton">
                        <i class="oi oi-magnifying-glass" />
                    </button>
                </div>

                <table class="table table-responsive table-condensed table-bordered table-striped table-hover">
                    <thead>
                        <tr>
                            <th>PrioridadId</th>
                            <th>Descripcion</th>
                            <th>DiasCompromiso</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var Prioridad in lista)
                        {
                            <tr>
                                <td>@Prioridad.PrioridadId</td>
                                <td>@Prioridad.Descripcion</td>
                                <td>@Prioridad.DiasCompromiso</td>
                                <td><a class="btn btn-outline-primary" href="ocupacion/@Prioridad.PrioridadId">Ver</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div class="card-footer">
                <div class="form-row justify-content-sm-between" aria-orientation="vertical">
                    <div class="col-3">
                        <label for="CantidaRegistro" class="col-form-label"><strong>Filas</strong>&nbsp;</label>
                        <input id="CantidaRegistro" @bind-value="@conteo" disabled class="form-control" />
                    </div>
                </div>
            </div>
        </div>
    </div>

</EditForm>

@code
{
    public string Descripcion { get; set; } = "";
    public int conteo { get; set; } = 0;
    

    

    public List<Prioridades> lista { get; set; } = new List<Prioridades>();

    public void Buscar()
    {
        if (string.IsNullOrWhiteSpace(Descripcion))
            lista = PrioridadesBLL.GetList(s => true);
        else
            lista = PrioridadesBLL.GetList(s => s.Descripcion.Contains(Descripcion));

        conteo = lista.Count();
    }

}